<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="3dp"
    android:minHeight="70dip"
    android:paddingLeft="@dimen/pL"
    android:paddingTop="@dimen/pL"
    android:paddingRight="@dimen/pL"
    android:paddingBottom="@dimen/pL"
    android:textAlignment="textEnd"
    tools:context=".MainActivity">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/display_textView"
            android:layout_width="309dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_span="5"
            android:background="@color/orange_cream"
            android:onClick="goOperator"
            android:text="0"
            android:textAlignment="viewEnd"
            android:textSize="65sp" />
    </TableRow>

    <TableRow
        android:layout_width="363dp"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/clear_button"
            android:layout_width="172dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_span="2"
            android:background="@color/dusk_blue"
            android:contentDescription="@string/all_clear"
            android:minHeight="70dip"
            android:onClick="goAC"
            android:text="AC"
            android:textSize="24sp" />

        <Button
            android:id="@+id/mod_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@color/grey"
            android:contentDescription="@string/mod"
            android:minHeight="70dip"
            android:onClick="goOperator"
            android:text="%"
            android:textSize="24sp" />

        <Button
            android:id="@+id/division_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@color/grey"
            android:contentDescription="@string/division"
            android:minHeight="70dip"
            android:onClick="goOperator"
            android:text="/"
            android:textSize="24sp" />
    </TableRow>

    <TableRow
        android:layout_width="374dp"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/seven_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@color/grey"
            android:contentDescription="@string/seven"
            android:minHeight="70dip"
            android:onClick="goOperand"
            android:text="7"
            android:textSize="24sp" />

        <Button
            android:id="@+id/eight_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@color/grey"
            android:contentDescription="@string/eight"
            android:minHeight="70dip"
            android:onClick="goOperand"
            android:text="8"
            android:textSize="24sp" />

        <Button
            android:id="@+id/nine_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@color/grey"
            android:contentDescription="@string/nine"
            android:minHeight="70dip"
            android:onClick="goOperand"
            android:text="9"
            android:textSize="24sp" />

        <Button
            android:id="@+id/multiplication_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@color/grey"
            android:contentDescription="@string/multiplication"
            android:minHeight="70dip"
            android:onClick="goOperator"
            android:text="X"
            android:textSize="24sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/four_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@color/grey"
            android:contentDescription="@string/four"
            android:minHeight="70dip"
            android:onClick="goOperand"
            android:text="4"
            android:textSize="24sp" />

        <Button
            android:id="@+id/five_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@color/grey"
            android:contentDescription="@string/five"
            android:minHeight="70dip"
            android:onClick="goOperand"
            android:text="5"
            android:textSize="24sp" />

        <Button
            android:id="@+id/six_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@color/grey"
            android:contentDescription="@string/six"
            android:minHeight="70dip"
            android:onClick="goOperand"
            android:text="6"
            android:textSize="24sp" />

        <Button
            android:id="@+id/minus_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@color/grey"
            android:contentDescription="@string/subtraction"
            android:minHeight="70dip"
            android:onClick="goOperator"
            android:text="-"
            android:textSize="24sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/one_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@color/grey"
            android:contentDescription="@string/one"
            android:minHeight="70dip"
            android:onClick="goOperand"
            android:text="1"
            android:textSize="24sp" />

        <Button
            android:id="@+id/two_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@color/grey"
            android:contentDescription="@string/two"
            android:minHeight="70dip"
            android:onClick="goOperand"
            android:text="2"
            android:textSize="24sp" />

        <Button
            android:id="@+id/three_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@color/grey"
            android:contentDescription="@string/three"
            android:minHeight="70dip"
            android:onClick="goOperand"
            android:text="3"
            android:textSize="24sp" />

        <Button
            android:id="@+id/addition_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@color/grey"
            android:contentDescription="@string/addition"
            android:minHeight="70dip"
            android:onClick="goOperator"
            android:text="+"
            android:textSize="24sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/zero_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_span="2"
            android:background="@color/grey"
            android:contentDescription="@string/zero"
            android:minHeight="70dip"
            android:onClick="goOperand"
            android:text="0"
            android:textSize="24sp" />

        <Button
            android:id="@+id/equals_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_span="2"
            android:background="@color/dusk_blue"
            android:contentDescription="@string/equals"
            android:minHeight="70dip"
            android:onClick="goCompute"
            android:text="="
            android:textSize="24sp" />
    </TableRow>
</TableLayout>



